//les mots de passes qui menent aux niveaux
int motdepasse(){
    char mdp[7];//mdp a 7 chiffres + 0
    scanf("%6s", mdp);

    if (strcmp(mdp, "manger") == 0 || strcmp(mdp, "Manger") == 0 || strcmp(mdp, "MANGER") == 0) {

        clearScreen();
        printf("Taper sur A pour commencer");
        niveau1();

    }

    else if (strcmp(mdp, "bloque") == 0 || strcmp(mdp, "Bloque") == 0 || strcmp(mdp, "BLOQUE") == 0) {

        clearScreen();
        printf("Taper sur A pour commencer");
        niveau2();
    }

    else if (strcmp(mdp, "bloque") == 0 || strcmp(mdp, "Bloque") == 0 || strcmp(mdp, "BLOQUE") == 0) {

        clearScreen();

        printf("\tNIVEAU\t3\n");

    }

    else if (strcmp(mdp, "snoopy") == 0 || strcmp(mdp, "Snoopy") == 0 || strcmp(mdp, "SNOOPY") == 0) {

        clearScreen();

        printf("\tNIVEAU\t4\n");
    }
    else if (strcmp(mdp, "e") == 0 || strcmp(mdp, "E") == 0) {
        clearScreen();
        while (getchar() != '\n'); // Vider la mémoire tampon d'entrée
        return menuPrincipal();

    }
    else{
        clearScreen();
        printf("Entrer le mot de passe ou taper E pour Exit au menu principal\n");
        motdepasse();
    }
}



int chargementSauvegarde() {
    int Sauve, dd1, dd2, dd3, choixSauv = 0;

    FILE *Sauve1, *Sauve2, *Sauve3;
    do {
        clearScreen();
        afficheSauvegarde();
        scanf("%d", &choixSauv);
    } while (choixSauv != 1 || choixSauv != 2 || choixSauv != 3);

//choix de sauvegarde
    switch (choixSauv) {
        case 1:
            if (dd1 != 0) {
                Sauve1 = fopen(Sauve1, "a+");

                if (Sauve1 == NULL) {
                    printf("erreur dans chargement sauvegarde");
                }
            } else if (dd1 == 0) {
                clearScreen();

                niveau1();
            }
            break;
        case 2:
            if (dd2 != 0) {
                Sauve2 = fopen(Sauve2, "a+");

                if (Sauve2 == NULL) {
                    printf("erreur dans chargement sauvegarde");
                } else if (dd2 == 0) {
                    clearScreen();
                    niveau1();
                }
                break;
                case 3:
                    if (dd3 != 0) {
                        clearScreen();
                        Sauve3 = fopen(Sauve3, "a+");

                        if (Sauve3 == NULL) {
                            printf("erreur dans chargement sauvegarde");
                        }


                    } else if (dd3 == 0) {
                        clearScreen();
                        Sauve3 = fopen(Sauve3, "w+");

                        if (Sauve3 == NULL) {
                            printf("erreur dans chargement sauvegarde");
                        }
                        clearScreen();
                        niveau1();


                    }
                default :
                    menuPrincipal();
                break;
            }
    }}


int hiscore() {
    int scoreNv1;
    FILE *TScoreNv1 = fopen("./Projet d'Info/TScoreNv1.txt", "r");
    if (TScoreNv1 == NULL) {
        printf("Erreur d'ouverture de fichier,hiscore.");
    }
    fscanf(TScoreNv1, "%d", &scoreNv1);
    fclose(TScoreNv1);


    printf("\t\tHIGH SCORE\n\n");

    printf("Niveau 1:\t%08d\n", scoreNv1);
    //printf("Niveau 2:\t%08d\n",scoreNv2);
    //printf("Niveau 3:\t%08d\n",scoreNv3);
    //printf("Niveau 4:\t%08d\n",scoreNv4);
    sleep(300);
    printf("Toucher une touche pour continuer");
    getch();
    clearScreen();
    menuPrincipal();
}











