void sauvegarde(int niveau, int tempsRestant, int score){
    int i, Sauve, dd1, dd2, dd3=0;
    FILE *Sauve1,*Sauve2,*Sauve3;

    //ouverture fichier pour checker si utilisé
    if(dd1==0) {

        fopen(Sauve1, "w+");

        if (Sauve1 == NULL) {
            printf("Erreur lors de l'ouverture du fichier pour sauvegarde du niveau 1.\n");
            return;
        }
        fseek(Sauve1, 0, SEEK_SET);
        fprintf(Sauve1,"%d\t%d\t%d\n", niveau,tempsRestant,score);
        fseek(Sauve1, 3*sizeof(10), SEEK_SET);
        // Écriture des données dans le fichier binaire
        fwrite(&niveau1, sizeof(niveau1), 1, Sauve1);

        fclose(Sauve1);

        printf("Niveau enregistré dans le fichier binaire Sauve1\n");
    }
    else if(dd1!=0 && dd2==0) {


        fopen(Sauve2, "w+");

        if (Sauve2 == NULL) {
            printf("Erreur lors de l'ouverture du fichier pour sauvegarde du niveau 1.\n");
            return;
        }
        fseek(Sauve2, 0, SEEK_SET);
        fprintf(Sauve2,"%d\t%d\t%d\n", niveau,tempsRestant,score);
        fseek(Sauve2, 3*sizeof(10), SEEK_SET);
        // Écriture des données dans le fichier binaire
        fwrite(&niveau1, sizeof(niveau1), 1, Sauve2);

        fclose(Sauve2);


        printf("Niveau enregistré dans le fichier binaire Sauve2\n");
    }
    else if(dd1!=0 && dd2!=0 &&dd3==0) {

        fopen(Sauve3, "w+");

        if (Sauve3 == NULL) {
            printf("Erreur lors de l'ouverture du fichier pour sauvegarde du niveau 1.\n");
            return;
        }
        fseek(Sauve3, 0, SEEK_SET);
        fprintf(Sauve3,"%d\t%d\t%d\n", niveau,tempsRestant,score);
        fseek(Sauve3, 0, SEEK_END);
        // Écriture des données dans le fichier binaire
        fwrite(&niveau1, sizeof(niveau1), 1, Sauve3);

        fclose(Sauve3);


        printf("Niveau enregistré dans le fichier binaire Sauve3\n");
    }


    else if(dd1!=0 && dd2!=0 &&dd3!=0) {
        do {
            clearScreen();

            printf("Toutes les sauvegardes sont pleines\n");
            printf("Veuillez choisir une sauvegarde a ecraser\n");
            afficheSauvegarde();
            scanf("%d",&Sauve);
        }while(Sauve!=1 && Sauve!=2 && Sauve!=3);

        switch (Sauve) {
            case 1:

                fopen(Sauve1, "w+");

                if (Sauve1 == NULL) {
                    printf("Erreur lors de l'ouverture du fichier pour sauvegarde du niveau 1.\n");
                    return;
                }
                fseek(Sauve1, 0, SEEK_SET);
                fprintf(Sauve1, "%d\t%d\t%d\n", niveau,tempsRestant,score);
                fseek(Sauve1, 3*sizeof(10), SEEK_SET);
                // Écriture des données dans le fichier binaire
                fwrite(&niveau1, sizeof(niveau1), 1, Sauve1);

                fclose(Sauve1);

                printf("Niveau enregistré dans le fichier binaire Sauve1\n");

                break;
            case 2:

                fopen(Sauve2, "w+");

                if (Sauve2 == NULL) {
                    printf("Erreur lors de l'ouverture du fichier pour sauvegarde du niveau 1.\n");
                    return;
                }
                fseek(Sauve2, 0, SEEK_SET);
                fprintf(Sauve2, "%d\t%d\t%d\n", niveau,tempsRestant,score);
                fseek(Sauve2, 3*sizeof(10), SEEK_SET);
                // Écriture des données dans le fichier binaire
                fwrite(Sauve2, sizeof(niveau1), 1, Sauve2);

                fclose(Sauve2);


                printf("Niveau enregistré dans le fichier binaire Sauve2\n");
                break;
            case 3:
                fopen(Sauve3, "w+");

                if (Sauve3 == NULL) {
                    printf("Erreur lors de l'ouverture du fichier pour sauvegarde du niveau 1.\n");
                    return;
                }
                fseek(Sauve3, 0, SEEK_SET);
                fprintf(Sauve3, "%d\t%d\t%d\n", niveau,tempsRestant,score);
                fseek(Sauve3, 3*sizeof(10), SEEK_SET);
                // Écriture des données dans le fichier binaire
                fwrite(&niveau1, sizeof(niveau1), 1, Sauve3);

                fclose(Sauve3);


                printf("Niveau enregistré dans le fichier binaire Sauve3\n");

                break;
        }}



    fopen(Sauve3, "w+");

    if (Sauve3 == NULL) {
        printf("Erreur lors de l'ouverture du fichier pour sauvegarde du niveau 1.\n");
        return;
    }
}













//menu principal
int menuPrincipal() {
    int option;

    do {

        clearScreen();

        printf("\n1.\t Regles du jeu \n");
        printf("2.\t Lancer un nouveau Jeu a partir du niveau 1 \n");
        printf("3.\t Charger une partie \n");
        printf("4.\t Mot de passe  \n");
        printf("5.\t Scores \n");
        printf("6.\t Quitter \n\n");
        printf("Veuillez choisir une option  \n");

        fflush(stdin);
        scanf("%d", &option);
        clearScreen();
    } while (option != 1 && option != 2 && option != 3 && option != 4 && option != 5 && option != 6 && option != 7);
    clearScreen();
    return option;
}


